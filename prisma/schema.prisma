generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  username  String   @unique
  password  String
  role      Role     @default(User)
  folders   Folder[]
  files     File[]
}

model Folder {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  files     File[]
}

model File {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  folder    Folder   @relation(fields: [folderId], references: [id])
  folderId  Int      @default(autoincrement())
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

enum Role {
  User
  Admin
}
