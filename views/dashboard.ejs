<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title><%= title %></title>
</head>
<body>
    <div id="top-bar">
        <button id="addButton"> Add </button>
        <h1>Welcome, <%= locals.user.username %></h1>
        <%- include("partials/logout") %>
    </div>
    <div class="newItems hide">
        <%- include("partials/newFolder") %>
        <%- include("partials/newFile") %>
    </div>
    <div class="content">
        <%- include("partials/folders", {folders: folders}) %>
        <%- include("partials/files", {files: files}) %>
    </div>
    <script>
        addButton.addEventListener('click', ()=> {
            const addItem = document.querySelector('.newItems')
            addItem.classList.toggle("hide")

            addItem.classList.length == 1 ? addButton.textContent = 'Close' : addButton.textContent = ' Add '

        })
    </script>
</body>
</html>